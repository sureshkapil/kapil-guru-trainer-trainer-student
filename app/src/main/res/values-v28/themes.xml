<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor">#000080</item>
        <item name="android:padding">5dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">@dimen/app_card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppCardViewStyle_latest" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor">#000080</item>
        <item name="android:padding">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

</resources>



