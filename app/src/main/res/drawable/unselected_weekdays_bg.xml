<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="@dimen/weekdays_bg_padding"
                android:left="@dimen/weekdays_bg_padding"
                android:right="@dimen/weekdays_bg_padding"
                android:top="@dimen/weekdays_bg_padding" />

            <solid android:color="#e1e1e0" />

            <size
                android:width="1dp"
                android:height="1dp" />
            <corners android:radius="1dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>